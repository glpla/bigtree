<view class="container">

  <!-- 用户 openid -->

  <button class="userinfo-avatar" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" style="background-image: url({{avatarUrl}})"></button>

  <view class='userinfo-txt'>{{userInfo['nickName']}}</view>
  <view class='userinfo-txt'>{{userInfo['gender']==1?"男":"女"}}</view>
  <view class='userinfo-txt'>{{userInfo['province']}}.{{userInfo['country']}}</view>
  <view class='userinfo-txt'>{{openid}}</view>

  <!-- 获取 openid -->
  <button class="userinfo-btn" bindtap="onGetOpenid">点击获取 openid</button>
  <!-- 操作数据库 -->
  <button class="userinfo-btn" bindtap="onDatabse" open-type="navigate">前端操作数据库</button>
  <!-- 新建云函数 -->
  <button class="userinfo-btn" bindtap="onCloudFunc" open-type="navigate">快速新建云函数</button>
  <!-- 云调用 -->
  <button class="userinfo-btn" bindtap="onCloudCall" open-type="navigate">云调用</button>



</view>